# Note: deliberately not called with /bin/sh -e

case $1 in
    configure)
        if [ -x /usr/bin/quirks-handler -a -d /sys/module/nvidia ]; then
            /usr/bin/quirks-handler -e system76-driver-nvidia
        fi
esac

